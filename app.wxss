/**app.wxss**/

page {
    background-color: #f0f0f0;
}

.container {
    margin: 20rpx 20rpx 15rpx 20rpx;
}

.container-items {
    background-color: #fff;
    padding: 0 30rpx;
    border-radius: 5rpx;
}

.items-group {
    padding: 20rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
}

.items-group:last-child {
    border-bottom: 0rpx solid #f0f0f0;
}

.items-group-flex {
    display: flex;
    flex-direction: column;
}

.item-flex {
    display: flex;
    justify-content: space-between;
}

.item-flex-column {
    display: flex;
    justify-content: space-between;
    flex-direction: column;
}

/* font-style */

.font-title {
    font-size: 26rpx;
    font-weight: bold;
    line-height: 1.5;
}

.font-content {
    font-size: 24rpx;
    line-height: 1.5;
}

.font-item {
    font-size: 22rpx;
    line-height: 1.5;
}

.font-color-gray {
    color: #a1a1a1;
}

.font-color-blue {
    color: #5ad0e9;
}

.font-color-green {
    color: #0ac775;
}
